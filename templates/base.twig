<!DOCTYPE html>
<html>
<head>
	{% block head %}

		{# Title #}
		<title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

		{# The Metas #}
		<meta name="viewport" content="width=device-width, initial-scale=1">
	    {% if meta.description %}
	        <meta name="description" content="{{ meta.description|striptags }}">
	    {% endif %}{% if meta.robots %}
	        <meta name="robots" content="{{ meta.robots }}">
	    {% endif %}


	    {# Fonts #}
	    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:400,700" type="text/css" />

	    {# Stylesheets #}
	    <link rel="stylesheet" href="{{ theme_url }}/public/css/main.css" type="text/css" />

	    {# Modernizer #}
	    <script src="{{ theme_url }}/public/js/modernizr-2.6.1.min.js"></script>

	{% endblock %}

</head>

{# Body #}
<body>

	{# Header #}
	{% block header %}

		{# Load front-page-header if on front page #}
		{% if meta.title == 'Home' %}
			{% include './templates/partials/front-page-header.twig' %}
		{% else %}
			{% include './templates/partials/header.twig' %}
		{% endif %}

	{% endblock %}

	{# Content section #}
	<section class="container">
		{% block content %} {% endblock %}
	</section>

	{# Footer #}
	<footer>
		{% block footer %}
			<p>&copy; 2017 NanoScience Technology Center</p>
		{% endblock %}
	</footer>

</body>

{# Scripts #}
<script type="text/javascript" src="{{ theme_url }}/node_modules/lory.js/dist/lory.min.js"></script>
<script type="text/javascript" src="{{ theme_url }}/public/js/custom.js"></script>
</html>